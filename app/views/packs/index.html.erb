<table class="table">
  <tr>
    <th>ID</th>
    <th><%= t("pack.name") %></th>
    <th><%= t("pack.cards") %></th>
    <th><%= t("pack.make_current") %></th>
    <th><%= t("pack.delete") %></th>
  </tr>
  <% if current_user %>
    <% current_user.packs.each do |pack| %>
      <tr>
        <td><%= pack.id %></td>
        <td><%= link_to pack.name, edit_pack_path(pack) %></td>
        <td><%= link_to t("pack.cards"), pack_cards_path(pack) %></td>
        <td><%= link_to t("pack.current"), current_pack_path(pack) %></td>
        <td><%= link_to t("pack.delete"), pack_path(pack), method: :delete %></td>
      </tr>
    <% end %>
  <% end %>
</table>
