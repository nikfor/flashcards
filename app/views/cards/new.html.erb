<%= simple_form_for [parent_pack, @card] do |f| %>
  <%= f.input :original_text, label: t("card.original_text")%>
  <%= f.input :translated_text, label: t("card.translated_text"), class: "text_field" %>
  <%= f.input :avatar, as: :file %>
  <%= f.button :submit, t("card.create_card_btn"), class: "left_btn"%>
 <% end %>
